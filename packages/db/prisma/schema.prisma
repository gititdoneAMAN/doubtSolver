generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id  String   @id   @default(uuid())
  email String @unique
  password String 
  name String
  usn String
  semester Int 
  section String 
  depatment DeptType
  subjects SubjectType[]
  doubtAsked Doubts[]
}

model Teachers {
  id String @id @default(uuid())
  employeeId String @unique
  email String @unique
  password String
  name String
  depatment DeptType
  doubtSolved Doubts[]
}

model Doubts {
  id String @id @default(uuid())
  question String
  content String
  studentName String
  teacherConcernedName String
  Subject SubjectType
  Department DeptType
  Status Status @default(Pending)
  studentId String
  studentinfo Student @relation(fields: [studentId], references: [id])
  empId String
  teacherInfo Teachers @relation(fields: [empId], references: [id])
}

enum Status {
  Pending
  Complete
}

enum DeptType {
  CSE
  ISC
}
enum SubjectType {
  BigData
  AIML
  FullStack
  Unix
  Electives
}

